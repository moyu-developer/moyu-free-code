{
  "compilerOptions": {
    "outDir": "build/dist",
    "allowSyntheticDefaultImports": true, // 允许引入没有默认导出的模块
    "module": "es2015",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "strict": false,
    "target": "es5",
    "noImplicitAny": false,
    "jsx": "preserve",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    "./**/*",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist",]
}